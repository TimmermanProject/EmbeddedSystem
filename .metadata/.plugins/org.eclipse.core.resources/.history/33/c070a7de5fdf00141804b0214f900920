/** 
 * @author Thomas Verbeke
 * Handler for incoming clients connections running on the server. 
 * 
 * **/

package communication;

import java.io.BufferedReader;
import java.io.DataOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.ObjectInputStream;
import java.net.Socket;

import shared.Frame;

public class EthernetFrameHandler extends Thread {
	Socket socket;
	
	public EthernetFrameHandler (Socket client){
		this.socket = client;
	}
	
	public void run(){
		
		try {
			ObjectInputStream inputBuffer = new ObjectInputStream(socket.getInputStream());
			
			while (true){
		        //cast incoming object to shared library frame
		        //detect closing and close connection and thread
		        Frame frame = (Frame) inputBuffer.readObject();
	        	
	        }
		} catch (IOException | ClassNotFoundException e1) {
			System.out.println("IO Exception");
			e1.printStackTrace();
		}

        
	}
	
	
}
